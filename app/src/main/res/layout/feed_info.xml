<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Layout"
        android:layout_width="371dp"
        android:layout_height="154dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/layout" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:contentDescription="profileImage"
        app:layout_constraintStart_toStartOf="@+id/userName"
        app:layout_constraintTop_toTopOf="@+id/Layout"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/memoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/Layout"
        tools:text="Title" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Layout"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        tools:text="Name" />

    <TextView
        android:id="@+id/hashTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/memoryTitle"
        tools:text="HashTag" />

    <TextView
        android:id="@+id/memoryDescirpt"
        android:layout_width="339dp"
        android:layout_height="49dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/Layout"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        tools:text="This is contents of chat." />

    <ImageButton
        android:id="@+id/likebtn"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/heart"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/pickNum"
        app:layout_constraintTop_toTopOf="@+id/Layout" />

    <TextView
        android:id="@+id/likesNum"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="1000"
        app:layout_constraintEnd_toStartOf="@+id/likebtn"
        app:layout_constraintTop_toTopOf="@+id/Layout" />

    <ImageButton
        android:id="@+id/pickBtn"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/pin"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/memoryDescirpt"
        app:layout_constraintTop_toTopOf="@+id/Layout" />

    <TextView
        android:id="@+id/pickNum"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="1000"
        app:layout_constraintEnd_toStartOf="@+id/pickBtn"
        app:layout_constraintTop_toTopOf="@+id/Layout" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="10dp"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/profile"
        app:layout_constraintTop_toTopOf="@+id/Layout"
        app:srcCompat="@drawable/bar" />

</android.support.constraint.ConstraintLayout>